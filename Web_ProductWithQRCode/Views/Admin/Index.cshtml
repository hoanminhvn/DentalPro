                                            <label for="field-1" class="control-label">Mật khẩu</label>
                                            <input type="password" name="password" class="form-control" id="field-1" placeholder="Nhập mật khẩu" ng-model="password" required>
                                            <span class="error" ng-show="(frmLogin.password.$touched && frmLogin.password.$invalid && frmLogin.password.$error.required)">
                                                Vui lòng nhập tên tài khoản!!
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <span class="error-login" ng-show="errorAccount" ng-bind="errorAccount"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-warning btn-rounded waves-effect waves-light" data-dismiss="modal">Hủy</button>
